<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="200.0" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ku.cs.controllers.user.PasswordChangeController">
   <HBox alignment="TOP_CENTER">
      <children>
          <Label text="Please change your password!" textFill="#000000a8" />
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER">
      <children>
          <PasswordField fx:id="newPasswordField" prefHeight="26.0" prefWidth="156.0" promptText="New Password" />
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER">
      <children>
          <PasswordField fx:id="confirmPasswordField" prefHeight="26.0" prefWidth="157.0" promptText="Confirm Password" />
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER" spacing="10.0">
      <children>
         <Button mnemonicParsing="false" onAction="#handleChangePassword" prefHeight="30.0" prefWidth="116.0" styleClass="button-confirm" stylesheets="@../../../styles/global.css" text="Change Password" />
         <Button mnemonicParsing="false" onAction="#onCancelButtonClick" prefHeight="30.0" prefWidth="30.0" styleClass="button-change-password-cancel" stylesheets="@../../../styles/global.css" text="âœ•" />

      </children>
   </HBox>
   <HBox />
    <VBox.margin>
        <Insets bottom="20" left="20" right="20" top="20" />
    </VBox.margin>
</VBox>
